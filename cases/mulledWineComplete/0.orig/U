FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U.air;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    bottom
    {
        type        noSlip;
    }

    top
    {
        type        pressureInletOutletVelocity;
        value       uniform (0 0 0);
    }

    walls
    {
        type        noSlip;
        //type        fixedValue;
        //value       $internalField;
    }
}


