FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      phaseProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type    massTransferMultiphaseSystem;

phases  (liquid gas oil);

liquid
{
    type            pureMovingPhaseModel;
}

oil
{
    type            pureMovingPhaseModel;
}

gas
{
    type            multiComponentMovingPhaseModel;
}

surfaceTension
(
    (gas and liquid)
    {
        type            constant;
        sigma           0.07;
    }
    
    (oil and liquid)
    {
        type            constant;
        sigma           0.005;
    }

    (gas and oil)
    {
        type            constant;
        sigma           0.07;
    }
);

massTransferModel
(
    (liquid to gas)
    {
        type            Lee;
        species         vapour.gas;
        C               100;
        Tactivate       373;
    }
    (oil to gas)
    {
        type            Lee;
        species         vapour.gas;
        C               100;
        // Unrefined canola oil
        Tactivate       380;
    }
);


// ************************************************************************* //
